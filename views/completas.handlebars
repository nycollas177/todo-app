<main>
    <section class="tarefas">
        {{#each tarefas}}
            <div class="tarefa">
                <form action="">
                <div>
                        <input type="checkbox" name="" id="tarefa-{{this.id}}" onchange="completarTarefa({{this.id}})">
                        <label for="tarefa-{{this.id}}">{{this.descricao}}</label>
                </div>

                    <button>
                        <img src="/images/x-icon.png" alt="Ícone de X para excluir uma tarefa">
                    </button>
                </form>
            </div>
        {{/each}}       
        <div class="informacoes">
            <p>{{quantidadeTarefas}} tarefas completas</p>
            <div class="botoes">
                <a href="/" >Todas</a>
                <a href="/ativas" >Ativas</a>
                <a href="/completas" class="active">Completas</a>
            </div>
            <a href="">Limpar tarefas</a>
        </div>
    </section>
    <section class="botoes">
        <a href="/" >Todas</a>
        <a href="/ativas" >Ativas</a>
        <a href="/completas" class="active">Completas</a>
    </section>
</main>